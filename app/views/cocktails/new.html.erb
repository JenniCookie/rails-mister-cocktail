<div class="container">
  <div "col-sm-6 col-sm-offset-4" >

    <h1>Create a cocktail</h1>
      <%= simple_form_for(@cocktail) do |f| %>
        <div class="form-inputs">
          <%= f.input :name %>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
        <% end %>
    <%=link_to "All the cocktails", cocktails_path%>
  </div>
</div>
